# Telegram Bot Token (from BotFather)
BOT_TOKEN=your_bot_token_here

# MongoDB Connection String
MONGODB_URI=mongodb+srv://username:password@cluster.mongodb.net/telegram_bot?retryWrites=true&w=majority

# Admin User ID for approving events
ADMIN_USER_ID=your_admin_telegram_id

# Group Chat ID where events will be posted
GROUP_CHAT_ID=your_group_chat_id

# Topic ID for events in the group (if applicable)
TOPIC_ID=your_topic_id
